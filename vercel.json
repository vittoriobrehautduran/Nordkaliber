{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "public",
  "git": {
    "deploymentEnabled": true,
    "autoAlias": true
  },
  "functions": {
    "api/*.js": {
      "maxDuration": 30
    }
  },
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/designpage",
      "dest": "/designpage.html"
    },
    {
      "src": "/designpage",
      "dest": "/designpage.html"
    },
    {
      "src": "/design",
      "dest": "/designpage.html"
    },
    {
      "src": "/checkout",
      "dest": "/checkout.html"
    },
    {
      "src": "/success",
      "dest": "/success.html"
    },
    {
      "src": "/policies",
      "dest": "/policies.html"
    },
    {
      "src": "/gallery",
      "dest": "/gallery.html"
    },
    {
      "src": "/home",
      "dest": "/index.html"
    }
  ]
} 